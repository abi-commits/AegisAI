# AegisAI Development Dockerfile
# Includes dev dependencies and hot-reload support

FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONFAULTHANDLER=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    # Development settings
    AEGIS_ENVIRONMENT=development \
    AEGIS_LOG_LEVEL=DEBUG

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    g++ \
    cmake \
    libgomp1 \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files first for better caching
COPY pyproject.toml MANIFEST.in ./

# Install dependencies including dev extras
RUN pip install --upgrade pip setuptools wheel && \
    pip install -e ".[dev]"

# Copy application code
COPY src/ ./src/
COPY config/ ./config/
COPY tests/ ./tests/
COPY main.py ./

# Create directories for logs
RUN mkdir -p /app/logs/audit

# Expose API port
EXPOSE 8000

# Default command with hot reload
CMD ["uvicorn", "aegis_ai.api.gateway:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app/src"]
